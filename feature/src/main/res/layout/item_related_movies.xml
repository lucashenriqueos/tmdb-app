<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/tiny_padding"
    android:paddingEnd="@dimen/tiny_padding">

    <ImageView
        android:id="@+id/iv_related_movie_thumb"
        android:layout_width="@dimen/folder_thumbnail_width"
        android:layout_height="@dimen/folder_thumbnail_height"
        android:layout_marginTop="@dimen/tiny_padding"
        android:layout_marginStart="@dimen/large_padding"
        android:layout_marginEnd="@dimen/large_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:tint="@color/colorPrimaryDark"
        tools:src="@drawable/ic_baseline_movie_24"/>

    <TextView
        android:id="@+id/tv_related_movie_title"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/medium_padding"
        android:layout_marginStart="@dimen/tiny_padding"
        android:layout_marginEnd="@dimen/tiny_padding"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/iv_related_movie_thumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Mocky Balboa"/>

</androidx.constraintlayout.widget.ConstraintLayout>